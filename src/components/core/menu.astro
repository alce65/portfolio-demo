---
import type { MenuItem } from "../../types/menu";
import Avatar from "./avatar.astro";
const MENU: MenuItem[] = [
  { label: "Experiencia", url: "/#experience" },
  { label: "Proyectos", url: "/#projects" },
  { label: "Papers", url: "/papers" },
  { label: "Acerca de", url: "/about" },
];
---

<nav>
  <a href="/" title="Inicio">
    <Avatar />
  </a>
  <ul>
    {
      MENU.map(({ label, url }) => (
        <li>
          <a href={url}>{label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    column-gap: var(--space);
    padding: 0;
    & > a {
      text-decoration: none;
      padding: var(--space-half);
    }
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-half);
    list-style: none;
    padding: 0;
    margin: 0;
  }
  li {
    display: flex;
    align-items: center;
    a {
      text-decoration: none;
      color: var(--color-primary);
      padding: var(--space-half);
      border-radius: 5px;
      transition: background-color 0.3s;

      &:hover {
        background-color: var(--color-primary-dark);
      }
    }
  }
</style>
