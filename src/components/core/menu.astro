---
import type { MenuItem } from "../../types/menu";
import Avatar from "./avatar.astro";
const MENU: MenuItem[] = [
  { label: "Experiencia", url: "/#experience" },
  { label: "Proyectos", url: "/#projects" },
  { label: "Papers", url: "/papers" },
  { label: "Acerca de", url: "/about" },
];
---

<nav>
  <ul>
    <li>
      <a href="/" title="Inicio">
        <Avatar />
      </a>
    </li>
    {
      MENU.map(({ label, url }) => (
        <li>
          <a href={url}>{label}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  ul {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-half);
    list-style: none;
    padding: 0;
  }
  li {
    display: flex;
    align-items: center;
    &:not(:nth-of-type(1)) a {
      text-decoration: none;
      color: var(--color-primary);
      padding: var(--space-half);
      border-radius: 5px;
      transition: background-color 0.3s;

      &:hover {
        background-color: var(--color-primary-dark);
      }
    }

    &:nth-of-type(1) {
      margin-right: auto;
    }
  }
</style>
