---
import type { Work } from "../../types/data";

interface Props extends Work {
  isLast?: boolean;
}
const {
  endDate,
  name,
  summary,
  company,
  urls,
  isLast = false,
} = Astro.props;

const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { year: "numeric", month: "long" };
  return date.toLocaleDateString("es-ES", options).split(" de ").join(" ");
};
---

<p class="timeline-component timeline-date h8">{formatDate(endDate)}</p>
<div class="timeline-middle">
  <div class="timeline-circle"></div>
</div>

{isLast ? 
  <div /> : 
  <div class="timeline-component timeline-content">
    <h3 class="h6">{name}</h3>
    <p class="h7">{summary}</p>
    <p class="h8">{company}</p>
    {!urls.length && (
      <a href={urls[0]} target="_blank">
        Ver mas
      </a>
    )}
  </div>
}

<style>

  p {
    margin-block-end: 0;
  }

  p.timeline-date {
    margin: 0;
    padding-inline-end: 2rem;
  }

  .timeline-component {
    margin: 0 1rem 1rem 1rem;
    background: #1f1f1f;
    /* -webkit-box-shadow:
      5px 5px 10px #1a1a1a,
      -5px -5px 10px #242424; */
    box-shadow:
      5px 5px 10px #1a1a1a,
      -5px -5px 10px #242424;
    border-radius: 5px;
    color: white;
    /* padding: 1.75rem; */
    transition: 0.4s ease;
    overflow-wrap: break-word;
  }

  p.timeline-component {
  }

  .timeline-content {
    padding: 1rem 2rem;
    margin-bottom: 2rem;
  }

  @media screen and (width > 500px) {
    .timeline-date {
      justify-self: self-end;
      align-self: self-start;
    }

    .timeline-middle {
      position: relative;
      background-image: linear-gradient(45deg, #f27121, #e94057, #8a2387);
      width: 3px;
      height: 100%;

      .main-middle {
        opacity: 0;
      }
      .timeline-circle {
        position: absolute;
        top: 0;
        left: 50%;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background-image: linear-gradient(45deg, #f27121, #e94057, #8a2387);
        -webkit-transform: translateX(-50%);
        transform: translateX(-50%);
      }
    }

    .timeline-content {
      margin-block-start: 3rem;
    }
</style>
